@model ComicBookViewer.Models.ComicBook[]
@* Add array brackets to indicate we expect an array. This makes our view strongly typed, specifically making the view's Model property to be an array of ComicBook objects. *@

@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-3">
            <h4>@comicBook.DisplayText</h4>
            <img src="/Images/@comicBook.CoverImageFileName"
                 alt="@comicBook.DisplayText"
                 class="img-responsive" />
        </div>
    }
</div>